[
  {
    "name": "${container_name}",
    "image": "foodoasisla/foodoasisla:sha-f28ed86",
    "cpu": ${container_cpu},
    "memory": ${container_memory},
    "portMappings": [
      { "containerPort": 5555, "hostPort": 5555 }
    ],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group" : "/${cluster_name}/${task_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs",
        "awslogs-create-group": "true"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "node -e 'console.log(`healthy`);' || exit 1"
      ],
      "interval": 20,
      "timeout": 10,
      "retries": 5
    },
    "environment": [
      { "name": "PORT", "value": "5555" }
    ]
  }
]
